        <partial name="_Navbar" />
        <div id="customContent">
            <form id="deleteTemplateForm" action="/Page/DeleteTemplateForm" method="post"><input type="hidden" name="templateId" value="@ViewData["TemplateId"]"></form>
            <form id="editTemplateForm" action="/Page/EditTemplateForm" method="post">
                <div class="ui header">Editing Template<span style="float: right"><a href="#">Syntax guide</a></span></div>
                <button type="submit" id="saveButton" class="ui button">Save template</button>
                <div id="saveButton" class="popuptrigger red ui button">Delete template</div>
                <div class="ui popup">
                    <div class="header">Are you sure?</div>
                    <div class="content" style="padding-bottom: 7px !important;">This cannot be undone.</div>
                    <button type="submit" form="deleteTemplateForm" class="tiny red ui button">Yes</button>
                </div>
                <input type="hidden" name="HtmlEdit" id="HtmlEdit">
                <input type="hidden" name="CssEdit" id="CssEdit">
                <input type="hidden" name="JsEdit" id="JsEdit">
                <input type="hidden" name="saveAsDraft" id="saveAsDraft">
                <input type="hidden" name="templateId" value="@ViewData["TemplateId"]">
            </form>
            <br>
            <div class="ui form">
                <div class="field">
                    <label>Template name</label>
                    <input type="text" name="templateName" id="templateName" form="editTemplateForm" value="@ViewData["TemplateName"]">
                </div>
                <div class="ui field">
                    <label>Template description</label>
                    <textarea name="templateDesc" form="editTemplateForm">@ViewData["TemplateDesc"]</textarea>
                </div>
            </div>
